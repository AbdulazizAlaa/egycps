<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/category_item_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/offer_item_image_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:src="@drawable/hotels"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <TextView
                    android:id="@+id/offer_item_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Title"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:textColor="@color/offer_item_text_color"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/offer_item_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="This a content for this offer here. This is a multi line offer with a lot of content to be said."
                    android:textColor="@color/offer_item_text_color"
                    android:textStyle="normal"/>
                <!--<TextView-->
                    <!--android:id="@+id/offer_item_info_tv"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:paddingLeft="15dp"-->
                    <!--android:lines="1"-->
                    <!--android:maxLines="1"-->
                    <!--android:ellipsize="marquee"-->
                    <!--android:text="info@egyptair.com"-->
                    <!--android:textColor="@color/toolbar_home_btn_selected_color"-->
                    <!--android:textStyle="normal"/>-->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>