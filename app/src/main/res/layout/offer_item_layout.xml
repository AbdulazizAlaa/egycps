<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/category_item_card_view"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp">
        <ImageView
            android:id="@+id/category_item_cat_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hotels"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/category_item_text_background_color"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/category_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIIIIIIIII"
                android:textColor="@color/category_item_text_color"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>